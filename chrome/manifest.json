{
	"manifest_version": 2,
	"name": "Nepi Jano!",
	"version": "4.0",
	"description": "Read paid content on www.sme.sk",
	"permissions": ["webRequest", "webRequestBlocking", "https://s.sme.sk/export/ma/*", "https://www.sme.sk/storm/*", "https://artemis.sme.sk/*"],
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"js": ["article.js"],
			"matches": ["*://*.sme.sk/c/*"]
		},
		{
			"js": ["video.js"],
			"matches": ["*://tv.sme.sk/v*"]
		},
		{
			"js": ["xml.js"],
			"matches": ["https://s.sme.sk/export/ma/?ch=*"]
		}
	],
	"homepage_url": "https://github.com/viliampucik/nepi-jano",
	"icons": {
		"16": "icon_16.png",
		"48": "icon_48.png",
		"128": "icon_128.png"
	}
}
